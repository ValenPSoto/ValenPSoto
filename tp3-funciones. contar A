#include <bits/stdc++.h>
using namespace std;
int ContarLetraA(string f);

int main() {
	int cont;
	string frase;
	cout<<"ingrese frase"<<endl;
	getline(cin,frase);
	
	cont=ContarLetraA(frase);
	
	cout<<"la cantidad de vocales A es:"<<cont<<endl;
	
	return 0;
}

	int ContarLetraA(int f){
		int i;
		int cont=0;
			for(i=0; i<f.size(); i++){
				if(f[i]=='A'||f[i]=='a'){
					cont++;
				}
			}
	
	return cont;
}
